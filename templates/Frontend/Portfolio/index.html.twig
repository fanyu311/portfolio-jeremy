{% extends 'base.html.twig' %}

{% block title %}
	Portfolio
	{{ parent() }}

{% endblock %}

{% block stylesheets %}

	{{ parent() }}
	{{ encore_entry_link_tags('app') }}
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	{{ encore_entry_script_tags('app') }}
{% endblock %}

{% block body %}

	<section>
		<div class="portfolio-back">
			<div class="portfolio-app">
				<h1>BIENVENUE DANS MON UNIVERS</h1>
				<p>Ici vous retrouverez de nombreuses photos que j'ai réalisées depuis mon départ dans des domaines différents (automobile, paysage, animaux, portait, etc.). J'espère qu'elles vous plairont !</p>
				<div class="portfolio-app-overlay"></div>
			</div>
		</div>


		<div class="card-portfolio-list">
			{% for portfolio in portfolios %}
				{% include 'Components/_portfolioCard.html.twig' %}
			{% endfor %}

		</div>

		<a href="#" class="arrow ph-arrow-up">
			<div class="arrow-up"></div>
			<div class="arrow-up"></div>
			<div class="arrow-up"></div>
		</a>


	</section>
{% endblock %}
