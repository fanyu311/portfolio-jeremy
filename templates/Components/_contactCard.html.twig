<div class="message-card">
	<h1>Contact
	</h1>
	<form action="" method="POST" class="card-form">
		<p>Nom<span>*</span>
		</p>
		<div class="fullname">

			<label for="prenom">
				<input type="text" name="prenom" class="prenom" placeholder="John" required>
				<p>Pr√©nom</p>
			</label>
			<label for="nom">
				<input type="text" name="nom" class="nom" placeholder="Doe" required>
				<p>Nom</p>
			</label>
		</div>
		<div class="email">
			<label for="email" required>
				<p>Email<span>*</span>
				</p>
